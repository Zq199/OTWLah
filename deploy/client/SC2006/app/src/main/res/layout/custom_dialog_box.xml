<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="10dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/dialog_close_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_close_party_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want close the party?"
            android:textColor="#526082"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="@id/dialog_close_party"
            app:layout_constraintStart_toStartOf="@id/dialog_close_party"
            app:layout_constraintTop_toBottomOf="@id/dialog_close_party" />

        <TextView
            android:id="@+id/dialog_close_party_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All party members will be kicked!"
            android:textColor="#526082"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/dialog_close_party_message"
            app:layout_constraintStart_toStartOf="@id/dialog_close_party_message"
            app:layout_constraintTop_toBottomOf="@id/dialog_close_party_message" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_close_party_message_2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close_party_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/black_semi_transparent"
                app:strokeWidth="2dp"
                app:strokeColor="@color/black_semi_transparent"
                android:backgroundTint="@color/white"
                android:padding="12dp"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close_party_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Confirm"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/quantum_googred"
                android:padding="12dp"
                android:layout_marginEnd="10dp"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>